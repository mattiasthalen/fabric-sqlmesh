{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    "features": {
        "ghcr.io/jlaundry/devcontainer-features/mssql-odbc-driver:1": {},
        "ghcr.io/va-h/devcontainers-features/uv:1": {}
    },
    "runArgs": [
        "--env-file", "${localWorkspaceFolder}/.env"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "humao.rest-client"
            ],
            "settings": {   
                "files.eol": "\n"
            }
        }
    }
}